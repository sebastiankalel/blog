<h1>Nuevo post</h1>
 
<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2>Errores:</h2>	
		<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
<br />
	<%= f.label :body %><br />
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit "Agregar Nuevo Post" %>
</p>
<% end %>